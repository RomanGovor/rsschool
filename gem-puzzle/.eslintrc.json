{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": ["airbnb", "airbnb/hooks"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-var": "warn",
        "no-unused-vars": "warn",
        "no-unused-expressions": "off",
        "radix": "warn",
        "no-restricted-properties" : "warn",
        "no-plusplus": "off",
        "arrow-body-style": "off",
        "function-paren-newline": "off",
        "no-undef": "off",
        "no-throw-literal": "off",
        "no-param-reassign" : "off",
        "class-methods-use-this": "warn"
    }
}
