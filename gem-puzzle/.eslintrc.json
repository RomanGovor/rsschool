{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-var": "warn",
        "arrow-body-style": "off", // Это - не наш стиль?
        "function-paren-newline": "off", // Несовместимо с prettier
        "no-plusplus": "off"
    }
}
